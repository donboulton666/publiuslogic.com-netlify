{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"],
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": ["dom", "esnext"],
    /* "allowJs": true, */
    /* "checkJs": true, */
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "react": [ "./node_modules/@types/react" ]
    }
  }
}
